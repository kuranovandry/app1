<div style="padding-left: 150px;">
<h1>All Users</h1> </div>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<div style="padding-left: 150px;">
<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>
<div style="padding-left: 150px; padding-right: 150px;">
<table border="1" class="table table-bordered">
  <thead>
  <tr>
    <th><center><%= sortable "first_namer", "First Name" %></center></th>
    <th><center><%= sortable "last_name", "Last name" %></center></th>
    <th><center><%= sortable "email", "E-mail" %></center></th>
    <th colspan="3"> <center>Action</center></th>
  </tr>
  </thead>
  
  <tbody id="sortable" id="sort_users" data-update-url="<%= sort_users_url %>">
      <%- @users.each do |user| %>
        <%= render partial: 'user', locals: { user: user }%>
      <% end %>
  </tbody>

</thead>
</table>
</div>
