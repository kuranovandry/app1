<% if @user.valid? %>
  $.lazybox.close();
  $('#user_<%= @user.id %>').replaceWith("<%= j(render partial: '   ', locals: { user: @user }) %>");
<% else %>
  $.lazybox("<%= j(render partial: 'form') %>");
<% end %>



